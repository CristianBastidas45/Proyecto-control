
; ESCRIBIR EN UNA POSICION UN DATO
EEPROM_DIRECCION
	BCF STATUS,RP0
	BSF STATUS,RP1
	MOVWF EEADR
	BCF STATUS,RP1
	RETURN 
EEPROM_ESCRIBIR
	BCF STATUS,RP0
	BSF STATUS,RP1
	MOVWF EEDATA
	BSF STATUS,RP0
	BCF EECON1,EEPGD ; SE ESCRIBE EN LA EEPROM DE DATOS Y NO EN LA EEPROM DE MEMORIA DE PROGRAMA
	BSF EECON1,WREN ;HABILITA ESCRITURA 
	; EL FABRICANTE INDICA ESCRIBIR 
	MOVLW 0X55 ; FABRICANTE
	MOVWF EECON2	
	MOVLW 0XAA ; FABRICANTE 
	MOVWF EECON2
	BSF EECON1,WR ; INDICA EL PROCESO DE ESCRITURA
NO_TERMINA_ESCRIBIR
	BTFSC EECON1,WR
	GOTO NO_TERMINA_ESCRIBIR
	BCF EECON1,WREN ; DESHABILITA ESCRITURA 
	BCF EECON1,EEIF ; PONE EN BAJO LA INTERRUPCION DE EEPROM
	BCF STATUS,RP0
	BCF STATUS,RP1
	RETURN
EEPROM_LEER
	BSF STATUS,RP0
	BSF STATUS,RP1
	BCF EECON1,EEPGD ; SE LEE DESDE LA EEPROM DE DATOS 
	BSF EECON1,RD ; INDICA EL PROCESO DE LECTURA
EPROM_LEER
	BSF STATUS,RP0
	BSF STATUS,RP1
	BCF EECON1,EEPGD
	BSF EECON1,RD
NO_TERMINA_DE_LEER
	BTFSC EECON1,RD
	GOTO NO_TERMINA_DE_LEER
	BCF STATUS,RP0
	BSF STATUS,RP1
	MOVF EEDATA,W
	BCF STATUS,RP0
	BCF STATUS,RP1
	RETURN


	